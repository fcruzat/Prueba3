<%= form_with(model: @todo, local: true) do|f|%>

<div class="form-group">
    <%= f.label 'Description:' %>
    <%= f.text_field :description, class: 'form-control'%>
</div>

<div class="form-group">
    <%= f.check_box :completed %> 
    <%= f.label 'Completed' %> 
</div>

<%= f.submit 'Save' %>
<% end %>

<%= link_to "Back", todos_path %>